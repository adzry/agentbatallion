# Agent Battalion - Temporal Worker Dockerfile

FROM node:20-alpine AS builder

WORKDIR /app

RUN apk add --no-cache python3 make g++

COPY package*.json ./
COPY packages/agent-battalion/package*.json ./packages/agent-battalion/

RUN npm ci --workspace=@meta/agent-battalion

COPY packages/agent-battalion ./packages/agent-battalion

RUN npm run build --workspace=@meta/agent-battalion

# Production stage
FROM node:20-alpine AS production

WORKDIR /app

RUN addgroup -g 1001 -S nodejs && \
    adduser -S nodejs -u 1001

COPY package*.json ./
COPY packages/agent-battalion/package*.json ./packages/agent-battalion/

RUN npm ci --workspace=@meta/agent-battalion --only=production

COPY --from=builder /app/packages/agent-battalion/dist ./packages/agent-battalion/dist

RUN chown -R nodejs:nodejs /app

USER nodejs

ENV NODE_ENV=production

CMD ["node", "packages/agent-battalion/dist/temporal/worker.js"]
