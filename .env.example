# Agent Battalion v3.0 - Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=4000
NODE_ENV=development

# Temporal Configuration (optional)
TEMPORAL_ADDRESS=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=agent-battalion-queue

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379

# ============================================
# LLM Provider Configuration
# ============================================
# Supported providers: openai, anthropic, google, ollama, mock
# Set to 'mock' for development without API keys
LLM_PROVIDER=anthropic
LLM_MODEL=claude-sonnet-4-20250514

# Enable real AI (set to true when API key is configured)
USE_REAL_AI=true

# OpenAI Configuration
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# Anthropic Configuration (Claude)
# Get your key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=

# Google AI Configuration
# Get your key from: https://makersuite.google.com/app/apikey
GOOGLE_AI_API_KEY=

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_DEPLOYMENT=

# Ollama Configuration (local)
OLLAMA_BASE_URL=http://localhost:11434

# ============================================
# Optional Services
# ============================================

# E2B Sandbox (secure code execution)
# Get your key from: https://e2b.dev/
E2B_API_KEY=

# Pinecone Vector DB (semantic memory)
# Get your key from: https://www.pinecone.io/
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=

# LangSmith Tracing (debugging)
LANGCHAIN_TRACING_V2=false
LANGCHAIN_API_KEY=
LANGCHAIN_PROJECT=agent-battalion
